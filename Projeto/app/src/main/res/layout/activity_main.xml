<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".telas.MainActivity">

    <Button
        android:id="@+id/BtCadastrar_cliente"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="160dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="16dp"
        android:onClick="cadastracliente"
        android:text="Cadastrar Cliente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtCadastrar_funcionario"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="160dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="16dp"
        android:text="@string/cadastrar_funcionario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtCadastrar_cliente" />

    <Button
        android:id="@+id/BtCadastrar_veiculo"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="160dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="20dp"
        android:text="@string/cadastrar_veiculo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtCadastrar_funcionario" />

    <Button
        android:id="@+id/BtEfetuar_locacao"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="160dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="16dp"
        android:text="@string/efetuar_loca_o"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtCadastrar_veiculo" />

    <Button
        android:id="@+id/Btsair"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="160dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="121dp"
        android:text="Sair"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtEfetuar_locacao" />

</android.support.constraint.ConstraintLayout>